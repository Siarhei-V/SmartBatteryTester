<Window x:Class="SmartBatteryTesterDesktopApp.UI.Views.NewMeasurementModalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmartBatteryTesterDesktopApp.UI.Views"
        mc:Ignorable="d"
        Title="Введите название теста" Height="200" Width="350">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" TextAlignment="Center" VerticalAlignment="Center" Text="Введите название нового теста"></TextBlock>
        <TextBox Grid.Row="1" Height="20" Width="200"></TextBox>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Height="20" Width="100" Content="Ок" IsDefault="True"></Button>
            <Button Grid.Column="1" Height="20" Width="100" Content="Отмена" IsCancel="True"></Button>
        </Grid>
    </Grid>
</Window>
